print("Welocme")
name = input("Name: ")
print("Hello",name)

print("Please indicate the number of years that you worked for the offices that were granted:")

it = int(input("YEARS IN IT: "))
acct = int(input("YEARS IN ACCT: "))
hr = int(input("YEARS IN HR: "))

payit = 1000
payacct = 1200
payhr = 1500

x = it * payit
a = acct  * payacct
h = hr * payhr

print(name,"you earn in IT for the yeas you've work is: ",x)
print(name,"you earn in ACCT is for the yeas you've work is: ",a)
print(name,"you earn in HR is for the yeas you've work is: ",h)
